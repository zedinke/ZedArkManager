<Window x:Class="ZedASAManager.Views.TermsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Általános Szerződési Feltételek (ÁSZF)" Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Általános Szerződési Feltételek (ÁSZF)" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="TermsTextBlock" 
                       TextWrapping="Wrap"
                       FontSize="12"
                       LineHeight="20"
                       Margin="0,0,0,16"/>
        </ScrollViewer>

        <Button Grid.Row="2" 
                Content="Bezárás" 
                Click="CloseButton_Click" 
                Width="100" 
                Height="35"
                HorizontalAlignment="Right"
                Padding="12,6"/>
    </Grid>
</Window>
