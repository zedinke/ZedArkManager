<Window x:Class="ZedASAManager.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Frissítés">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TitleTextBlock"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,16"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="CurrentVersionTextBlock"
                       FontSize="12"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="LatestVersionTextBlock"
                       FontSize="12"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="ReleaseNotesLabel"
                       Text="Frissítési jegyzetek:"
                       FontSize="12"
                       FontWeight="Bold"
                       Margin="0,0,0,8"
                       Visibility="Collapsed"/>
            <ScrollViewer MaxHeight="200" Margin="0,0,0,16" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ReleaseNotesTextBlock"
                           FontSize="11"
                           TextWrapping="Wrap"
                           TextAlignment="Left"/>
            </ScrollViewer>
            <TextBlock x:Name="StatusTextBlock"
                       FontSize="12"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
            <ProgressBar x:Name="ProgressBar"
                         Height="20"
                         Margin="0,0,0,16"
                         Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="UpdateButton"
                        Content="Frissítés"
                        Width="100"
                        Margin="0,0,8,0"
                        Click="UpdateButton_Click"/>
                <Button x:Name="CloseButton"
                        Content="Bezárás"
                        Width="100"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
