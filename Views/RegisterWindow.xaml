<Window x:Class="ZedASAManager.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utilities="clr-namespace:ZedASAManager.Utilities"
        Title="Regisztráció" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Regisztráció" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,24"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Felhasználónév *" Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         Padding="8"
                         FontSize="14"/>

                <TextBlock Text="Teljes név *" Margin="0,0,0,8"/>
                <TextBox x:Name="FullNameTextBox" 
                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         Padding="8"
                         FontSize="14"/>

                <TextBlock Text="E-mail cím *" Margin="0,0,0,8"/>
                <TextBox x:Name="EmailTextBox" 
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         Padding="8"
                         FontSize="14"/>

                <TextBlock Text="Telefonszám" Margin="0,0,0,8"/>
                <TextBox x:Name="PhoneNumberTextBox" 
                         Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         Padding="8"
                         FontSize="14"/>

                <TextBlock Text="Cégnév (opcionális)" Margin="0,0,0,8"/>
                <TextBox x:Name="CompanyNameTextBox" 
                         Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         Padding="8"
                         FontSize="14"/>

                <TextBlock Text="Jelszó *" Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,0,0,16"
                             Padding="8"
                             FontSize="14"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Jelszó megerősítése *" Margin="0,0,0,8"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Margin="0,0,0,16"
                             Padding="8"
                             FontSize="14"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <CheckBox x:Name="AcceptTermsCheckBox"
                          Content="Elfogadom az Általános Szerződési Feltételeket *"
                          IsChecked="{Binding AcceptedTerms}"
                          Margin="0,0,0,8"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Text="* kötelező mezők" 
                           FontSize="10" 
                           Foreground="Gray" 
                           Margin="0,0,0,16"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ÁSZF megtekintése" 
                    Click="ViewTermsButton_Click" 
                    Width="150" 
                    Height="35" 
                    Margin="0,0,8,0"
                    Padding="12,6"/>
            <Button Content="Regisztráció" 
                    Command="{Binding RegisterCommand}"
                    Click="RegisterButton_Click"
                    Width="120" 
                    Height="35" 
                    Margin="0,0,8,0"
                    Padding="12,6"
                    IsDefault="True"/>
            <Button Content="Mégse" 
                    Click="CancelButton_Click" 
                    Width="100" 
                    Height="35"
                    Padding="12,6"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
