<Window x:Class="ZedASAManager.Views.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Változásnapló" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="TitleTextBlock"
                   Text="Változásnapló" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,16"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Release List -->
            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Margin="0,0,8,0"
                    Background="#FAFAFA">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               x:Name="VersionsLabel"
                               Text="Verziók" 
                               FontWeight="Bold" 
                               Padding="8"
                               Background="#F5F5F5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Releases}"
                             SelectedItem="{Binding SelectedRelease}"
                             DisplayMemberPath="Version"
                             BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Release Notes -->
            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               FontWeight="Bold" 
                               Padding="8"
                               Background="#F5F5F5">
                        <Run Text="Verzió: "/>
                        <Run Text="{Binding SelectedRelease.Version, FallbackValue='-', Mode=OneWay}"/>
                        <Run Text=" ("/>
                        <Run Text="{Binding FormattedPublishedDate, FallbackValue='-', Mode=OneWay}"/>
                        <Run Text=")"/>
                    </TextBlock>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="8">
                        <TextBlock x:Name="ReleaseNotesTextBlock"
                                   Text="{Binding SelectedRelease.ReleaseNotes, FallbackValue='Válassz ki egy verziót a listából', Mode=OneWay}" 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="12"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="RefreshButton"
                    Content="Frissítés" 
                    Command="{Binding LoadReleasesCommand}"
                    Margin="0,0,8,0"
                    Padding="12,6"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button x:Name="CloseButton"
                    Content="Bezárás" 
                    Click="Close_Click"
                    Padding="12,6"/>
        </StackPanel>
    </Grid>
</Window>
