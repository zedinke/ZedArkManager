<Window x:Class="ZedASAManager.Views.ConfigTextEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Konfiguráció Szöveges Szerkesztő" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleTextBlock"
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,16"/>

        <!-- Config File Selector and Search -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Konfiguráció fájl:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ConfigFileComboBox"
                          Width="200"
                          Margin="0,0,16,0"
                          SelectionChanged="ConfigFileComboBox_SelectionChanged"/>
                <Button Content="Betöltés" 
                        x:Name="LoadButton"
                        Click="LoadButton_Click"
                        Margin="8,0"
                        Padding="12,6"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Keresés:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="SearchTextBox"
                         Width="300"
                         Padding="8,4"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"/>
                <Button Content="Következő" 
                        x:Name="FindNextButton"
                        Click="FindNextButton_Click"
                        Margin="8,0,0,0"
                        Padding="12,6"/>
            </StackPanel>
        </StackPanel>

        <!-- Text Editor -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="0,0,0,16">
            <TextBox x:Name="ConfigTextBox"
                     TextWrapping="NoWrap"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     FontFamily="Consolas"
                     FontSize="12"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     MinHeight="500"/>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Mentés" 
                    x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Margin="8,0"
                    Padding="12,6"
                    IsDefault="True"/>
            <Button Content="Mégse" 
                    Click="CancelButton_Click"
                    Margin="8,0"
                    Padding="12,6"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
