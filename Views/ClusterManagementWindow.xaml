<Window x:Class="ZedASAManager.Views.ClusterManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="ClusterManagementWindowControl"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="TitleTextBlock"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <Button Grid.Row="1"
                x:Name="CreateClusterButton"
                Content="Cluster létrehozás"
                Width="200"
                Height="40"
                Margin="0,0,0,16"
                HorizontalAlignment="Left"
                Click="CreateCluster_Click"/>

        <ScrollViewer Grid.Row="2" 
                       VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ClustersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" 
                                BorderThickness="1" 
                                Margin="0,0,0,8" 
                                Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding Name}" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>
                                
                                <StackPanel Grid.Row="1" 
                                            Orientation="Horizontal"
                                            Loaded="StackPanel_Loaded">
                                    <Button Margin="0,0,8,0"
                                            Padding="8,4"
                                            Click="RenameCluster_Click"
                                            Tag="{Binding}"/>
                                    <Button Padding="8,4"
                                            Click="DeleteCluster_Click"
                                            Tag="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="CancelButton"
                    Padding="12,6"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
