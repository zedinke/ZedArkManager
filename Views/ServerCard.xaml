<UserControl x:Class="ZedASAManager.Views.ServerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:utilities="clr-namespace:ZedASAManager.Utilities"
             xmlns:models="clr-namespace:ZedASAManager.Models"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="350">
    <materialDesign:Card Padding="0" 
                         materialDesign:ElevationAssist.Elevation="Dp2"
                         Background="White"
                         Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Status and Title -->
            <Border Grid.Row="0" 
                    Background="#6200EA" 
                    Padding="16,12"
                    CornerRadius="4,4,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding MapName, Mode=OneWay}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding ServerName, Mode=OneWay}" 
                                   FontSize="12"
                                   Foreground="#E0E0E0"/>
                    </StackPanel>
                    
                    <!-- Status Badge -->
                    <Border Grid.Column="1" 
                            Background="{Binding Status, Mode=OneWay, Converter={StaticResource StatusToColorConverter}}"
                            CornerRadius="12"
                            Padding="8,4"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                     Fill="White" 
                                     Margin="0,0,6,0"
                                     VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status, Mode=OneWay}" Value="0">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="1.0" To="0.3" Duration="0:0:1.5"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding Status, Mode=OneWay}" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Port Info and Game Day -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{Binding PortInfo, Mode=OneWay}" 
                               FontSize="13"
                               Foreground="#666"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding GameDayInfo, Mode=OneWay}" 
                               FontSize="13"
                               Foreground="#666"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding PlayerInfo, Mode=OneWay}" 
                               FontSize="13"
                               Foreground="#666"/>
                </StackPanel>

                <!-- Server Version and Ping -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="{Binding ServerVersionInfo, Mode=OneWay}" 
                               FontSize="13"
                               Foreground="#666"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding ServerPingInfo, Mode=OneWay}" 
                               FontSize="13"
                               Foreground="#666"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Margin="0,0,0,8">
                    <UniformGrid Columns="2" Rows="2" Margin="0,0,0,4">
                        <Button Content="Indítás" 
                                Command="{Binding StartCommand}"
                                Margin="4"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Leállítás" 
                                Command="{Binding StopCommand}"
                                Margin="4"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Újraindítás" 
                                Command="{Binding RestartCommand}"
                                Margin="4"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Frissítés" 
                                Command="{Binding UpdateCommand}"
                                Margin="4"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                    </UniformGrid>
                    <UniformGrid Columns="3" Margin="4">
                        <Button Content="Konfiguráció" 
                                Command="{Binding ConfigCommand}"
                                Margin="2"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"/>
                        <Button Content="Élő adatok" 
                                Command="{Binding OpenLiveLogsCommand}"
                                Margin="2"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"/>
                        <Button x:Name="ShutdownButton"
                                Command="{Binding ShutdownCommand}"
                                Margin="2"
                                Height="36"
                                FontSize="12"
                                Padding="12,6"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Loaded="ShutdownButton_Loaded"/>
                    </UniformGrid>
                </StackPanel>
            </Grid>

            <!-- Footer with Delete Button -->
            <Border Grid.Row="2" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,1,0,0"
                    Background="#FAFAFA"
                    Padding="8">
                <Button Content="Törlés" 
                        Command="{Binding DataContext.RemoveServerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        Background="#D32F2F"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,6"
                        FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#D32F2F"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C62828"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </materialDesign:Card>
</UserControl>
