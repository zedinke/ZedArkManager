<Window x:Class="ZedASAManager.Views.ConnectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kapcsolat Beállítások" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="SSH Kapcsolat Beállítások" 
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <TextBlock Grid.Row="1" Text="Host:" VerticalAlignment="Center" Margin="0,0,0,4"/>
        <TextBox Grid.Row="2" 
                 Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,8"
                 Padding="8"/>

        <TextBlock Grid.Row="3" Text="Port:" VerticalAlignment="Center" Margin="0,0,0,4"/>
        <TextBox Grid.Row="4" 
                 Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,8"
                 Padding="8"/>

        <TextBlock Grid.Row="5" Text="Felhasználónév:" VerticalAlignment="Center" Margin="0,0,0,4"/>
        <TextBox Grid.Row="6" 
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,8"
                 Padding="8"/>

        <CheckBox Grid.Row="7" 
                  Content="SSH Kulcs Használata"
                  IsChecked="{Binding UseSshKey}"
                  Margin="0,0,0,8"/>

        <StackPanel Grid.Row="8" x:Name="PasswordPanel">
            <TextBlock Text="Jelszó:" VerticalAlignment="Center" Margin="0,0,0,4"/>
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"
                     Padding="8"/>
        </StackPanel>

        <StackPanel Grid.Row="8" x:Name="SshKeyPanel" Visibility="Collapsed">
            <TextBlock Text="SSH Kulcs Útvonal:" VerticalAlignment="Center" Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" 
                         Text="{Binding SshKeyPath, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,8,0"
                         Padding="8"/>
                <Button Grid.Column="1" 
                        Content="Tallózás"
                        Click="BrowseSshKey_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Mentés" 
                    Command="{Binding SaveCommand}"
                    Margin="0,0,8,0"
                    Padding="12,6"
                    Click="Save_Click"/>
            <Button Content="Mégse" 
                    Padding="12,6"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
