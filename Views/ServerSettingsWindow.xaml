<Window x:Class="ZedASAManager.Views.ServerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szerver Hozzáadása" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Szerver neve:" Margin="0,0,0,8"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" Margin="0,0,0,16" Padding="8"/>

        <TextBlock Grid.Row="2" Text="Host/IP:" Margin="0,0,0,8"/>
        <TextBox Grid.Row="3" x:Name="HostTextBox" Margin="0,0,0,16" Padding="8"/>

        <TextBlock Grid.Row="4" Text="Port:" Margin="0,0,0,8"/>
        <TextBox Grid.Row="5" x:Name="PortTextBox" Text="22" Margin="0,0,0,16" Padding="8"/>

        <TextBlock Grid.Row="6" Text="Felhasználónév:" Margin="0,0,0,8"/>
        <TextBox Grid.Row="7" x:Name="UsernameTextBox" Margin="0,0,0,16" Padding="8"/>

        <StackPanel Grid.Row="8" x:Name="PasswordPanel" Margin="0,0,0,16">
            <TextBlock Text="Jelszó:" Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox" Padding="8"/>
        </StackPanel>

        <CheckBox Grid.Row="9" x:Name="UseSshKeyCheckBox" 
                  Content="SSH kulcs használata" 
                  Margin="0,0,0,16"
                  Checked="UseSshKeyCheckBox_Checked"
                  Unchecked="UseSshKeyCheckBox_Unchecked"/>

        <StackPanel Grid.Row="10" x:Name="SshKeyPanel" Visibility="Collapsed" Margin="0,0,0,16">
            <TextBlock Text="SSH kulcs útvonala:" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="SshKeyPathTextBox" Padding="8" Margin="0,0,8,0"/>
                <Button Grid.Column="1" Content="Tallózás" Click="BrowseSshKey_Click" Padding="12,6"/>
            </Grid>
            <Button Content="SSH kulcs generálása és telepítése" 
                    Click="GenerateSshKey_Click" 
                    Padding="12,6"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Mentés" 
                    Click="Save_Click" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,8,0"
                    Padding="12,6"
                    IsDefault="True"/>
            <Button Content="Mégse" 
                    Click="Cancel_Click" 
                    Width="100" 
                    Height="35"
                    Padding="12,6"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
