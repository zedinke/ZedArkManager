<Window x:Class="ZedASAManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utilities="clr-namespace:ZedASAManager.Utilities"
        Title="Bejelentkezés" Height="520" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="ARK ASA Cluster Manager" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,32"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Felhasználónév:" Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameTextBox" 
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"
                     Padding="8"
                     FontSize="14"/>

            <TextBlock Text="Jelszó:" Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox" 
                         Margin="0,0,0,16"
                         Padding="8"
                         FontSize="14"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <CheckBox x:Name="RememberMeCheckBox"
                      Content="Emlékezz rám (72 óra)"
                      IsChecked="{Binding RememberMe}"
                      Margin="0,0,0,16"
                      HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Button Content="Bejelentkezés" 
                        Command="{Binding LoginCommand}"
                        Click="LoginButton_Click"
                        Width="120"
                        Height="35"
                        Margin="0,0,8,0"
                        Padding="12,6"
                        IsDefault="True"/>
                <Button Content="Regisztráció" 
                        Click="RegisterButton_Click"
                        Width="120"
                        Height="35"
                        Padding="12,6"/>
            </StackPanel>
            
            <Button Content="ÁSZF megtekintése" 
                    Click="ViewTermsButton_Click" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,16"
                    Width="200"
                    Height="30"
                    Padding="12,4"/>

            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"
                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <TextBlock Grid.Row="2" 
                   Text="Verzió 1.0" 
                   FontSize="10" 
                   Foreground="Gray" 
                   HorizontalAlignment="Center" 
                   Margin="0,16,0,0"/>
    </Grid>
</Window>
